@model DigitalLockerSystem.Controllers.EditRolesViewModel

@{
    ViewData["Title"] = "Edit User Roles";
}

<h2>Edit Roles for @Model.Email</h2>

<form asp-action="EditRoles" method="post" novalidate>
    <input type="hidden" asp-for="UserId" />
    
    <div class="mb-3">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check">
                <input asp-for="Roles[i].Selected" class="form-check-input" id="roleCheck_@i" />
                <input type="hidden" asp-for="Roles[i].RoleName" />
                <label class="form-check-label" for="roleCheck_@i">@Model.Roles[i].RoleName</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>